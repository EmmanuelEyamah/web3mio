
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) @map("_id")
  username String @unique
  email    String @unique
  password String
  createdAt   DateTime  @default(now())
}

model Article {
  id          String    @id @default(uuid()) @map("_id")
  name       String
  short_desc       String
  description       String[]
  imageUrl       String?
  imagesUrl       String[]
  link_text       String?
  link_url       String?
  createdAt   DateTime  @default(now())
}

model Documentation {
  id          String    @id @default(uuid()) @map("_id")
  name       String
  short_desc       String
  description       String[]
  imageUrl       String?
  imagesUrl       String[]
  link_text       String?
  link_url       String?
  createdAt   DateTime  @default(now())
}