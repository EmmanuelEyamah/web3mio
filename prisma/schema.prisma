
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Article {
  id          String    @id @default(uuid()) @map("_id")
  name       String
  short_desc       String
  description       String
  imageUrl       String?
  createdAt   DateTime  @default(now())
}

model Documentation {
  id          String    @id @default(uuid()) @map("_id")
  name       String
  short_desc       String
  description       String
  imageUrl       String?
  createdAt   DateTime  @default(now())
}